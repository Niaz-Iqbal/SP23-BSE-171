<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Product</title>
    <style>
      /* General Body Styling */
      body {
        background: linear-gradient(45deg, #1c1c1c, #2c3e50);
        color: #fff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      /* Navbar Styling */
      nav {
        background: #2c3e50;
        padding: 10px;
        text-align: center;
      }

      nav a {
        color: #ff9800;
        text-decoration: none;
        margin-right: 15px;
        font-size: 1rem;
      }

      /* Form Container */
      .add-product-container {
        margin: 30px auto;
        max-width: 600px;
        background-color: #34495e;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .add-product-container h1 {
        text-align: center;
        color: #ff9800;
        margin-bottom: 20px;
      }

      .add-product-container label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
      }

      .add-product-container input[type="text"],
      .add-product-container textarea,
      .add-product-container input[type="file"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-sizing: border-box;
      }

      .add-product-container button,
      .add-product-container a {
        display: inline-block;
        text-decoration: none;
        color: #fff;
        background-color: #4caf50;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 10px;
      }

      .add-product-container button:hover,
      .add-product-container a:hover {
        background-color: #45a049;
      }

      .add-product-container .back-button {
        background-color: #ff9800;
      }

      .add-product-container .back-button:hover {
        background-color: #ff5722;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <!-- <nav>
    <a href="/">Home</a>
    <a href="/admin">Dashboard</a>
  </nav> -->

    <!-- Add Product Form -->
    <div class="add-product-container">
      <h1>Add New Product</h1>
      <form
        action="/admin/products"
        method="POST"
        enctype="multipart/form-data"
      >
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" required />

        <label for="detail">Product Detail:</label>
        <textarea
          id="detail"
          name="detail"
          rows="4"
          placeholder="Enter product details..."
          required
        ></textarea>

        <label for="image">Product Image:</label>
        <input type="file" id="image" name="image" required />

        <button type="submit">Add Product</button>
        <a href="/admin/products" class="back-button">Back</a>
      </form>
    </div>
  </body>
</html>
